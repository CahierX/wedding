Page {
  padding: 32rpx;
}

.container {
  width: 100%;
  background: rgba(51, 58, 82, 0.6);
  border: 1px solid #4A556F;
  backdrop-filter: blur(15px);
  border-radius: 8px;
  overflow: hidden;
  box-sizing: border-box;
}

.top-view {
  width: 100%;
  height: 560rpx;
  margin-bottom: 24rpx;
}

.top-image {
  width: 100%;
}

.content {
  padding: 32rpx;
  box-sizing: border-box;
}

.title {
  font-weight: 500;
  font-size: 36rpx;
  color: #fff;
  display: block;

}

.desc {
  display: block;
  font-weight: 400;
  font-size: 28rpx;
  color: #FFFFFF;
  opacity: 0.9;
  margin-top: 24rpx;
}

.hr {
  width: 90%;
  margin: auto;
  border: 1px dashed #4A556F;
}

.bottom {
  padding: 32rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bottom .left {
  display: flex;
  flex-direction: column;
}

.bottom .left .logo {
  width: 56rpx;
  height: 56rpx;
}

.bottom .left .aibb {
  width: 94rpx;
  height: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 12rpx;
}

.column {
  text-align: center;
}

.slogn {
  font-size: 20rpx;
  color: #FFFFFF;
  opacity: 0.6;
}

.bottom .qr-image {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 18rpx;
}

.right {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
}