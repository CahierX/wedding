<!-- pages/cli/cli.wxml -->
<view class="terminal-container">
  <view class="terminal-header">
    <text class="terminal-title">Marry Code</text>
  </view>
  <scroll-view class="terminal-body" scroll-y>
    <view class="code-section">
      <block wx:for="{{codeLines}}" wx:key="index">
        <view class="code-line">
          <text class="{{item.class}}">{{item.text}}</text>
        </view>
      </block>
    </view>
  </scroll-view>
</view>