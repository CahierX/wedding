/* pages/cli/cli.wxss */
.terminal-container {
  background-color: #030616;
  border-radius: 8px;
  margin: 20px;
  overflow: hidden;
  border: 1px solid #1e293b;
}

.terminal-header {
  background-color: #0F172A;
  padding: 10px;
  border-bottom: 1px solid #1e293b;
}

.terminal-title {
  color: #fff;
  font-family: monospace;
}

.terminal-body {
  height: 200px;
  padding: 15px;
}

.code-line {
  font-family: 'Courier New', monospace;
  font-size: 14px;
  line-height: 1.5;
}

.vsc-comment {
  color: #6A9955;
}

.vsc-keyword {
  color: #569CD6;
}

.vsc-variable {
  color: #9CDCFE;
}

.vsc-string {
  color: #CE9178;
}

.vsc-function {
  color: #DCDCAA;
}

.vsc-property {
  color: #9CDCFE;
}

.vsc-text {
  color: #D4D4D4;
}

.vsc-bracket {
  color: #D4D4D4;
}