<view class="chat-container">
  <scroll-view class="chat-box" scroll-y="true" scroll-into-view="{{scrollIntoView}}" scroll-with-animation="{{true}}">
    <view class="chat-item {{item.isMe ? 'right' : 'left'}}" id="chat-{{index}}" wx:for="{{chatList}}" wx:key="index">
      <image class="avatar" src="{{item.isMe ? meAvatar : aiAvatar}}"></image>
      <view class="content-box">
        <view class="content">{{item.content}}</view>
      </view>
    </view>
  </scroll-view>
  <!-- 输入框 -->
  <view class="input-box">
    <t-input class="input" placeholder-style="color:#fff" cursor-spacing="20" borderless placeholder="请输入消息" value="{{inputValue}}" bind:change="onInput" bind:enter="onSend" />
    <button class="send-btn" bindtap="onSend">发送</button>
  </view>
</view>