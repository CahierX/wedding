.home-container {
  height: 100%;
  overflow: scroll;
}

.home-container .content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 20rpx;
  overflow: scroll;
}

.content-pull-down {
  height: 70% !important;
}

.fab {
  bottom: 100rpx;
}

.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-color-4--);
}

.blank-record {
  background-color: #fff;
  border-radius: 20rpx;
  height: 569px;
  transition: 0.2s;
}

.home-summary {
  background: var(--primary--);
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.home-summary .item {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
  font-weight: 400;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.home-summary .item .title {
  font-size: 42rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.home-summary .item .label {
  opacity: 0.7;
}