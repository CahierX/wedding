Page {
  background-color: #fff;
}

.content {
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx 200rpx 20rpx;
}

.fab {
  bottom: 100rpx;
}

.home-summary {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;
  background-color: var(--primary--);
}

.home-summary .item {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
  font-weight: 400;
  margin-bottom: 10rpx;
}

.home-summary .item .price {
  font-size: 42rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.home-summary .item .label {
  opacity: 0.7;
}

.content .note {
  color: var(--primary--);
}