.container {
  color: #e2e8f0;
  padding: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  padding-left: 20rpx;
}

.timeline {
  display: flex;
  flex-direction: column;
}

.timeline-item {
  display: flex;
  margin-bottom: 40rpx;
  gap: 30rpx;
}

.left {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.line {
  width: 4rpx;
  height: 100rpx;
  background-color: #334155;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #1e283a;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon .git-icon {
  width: 100%;
  height: 100%;
}

.content {
  background-color: #2e2e3e;
  padding: 15rpx;
  border-radius: 8rpx;
  flex: 1;
}

.date {
  font-size: 28rpx;
  color: #64748b;
}

.message {
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx 0;
}

.author {
  font-size: 28rpx;
  color: #f472b6;
}