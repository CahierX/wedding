Page {
  height: 100%;
  overflow-y: scroll;
}

.top {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 20rpx;
}

.top .search {
  width: 620rpx;
}

.top .title {
  font-size: 40rpx;
}

.content {
  padding: 20rpx;
}

.customer-name {
  font-size: 36rpx;
  line-height: 200%;
}

.popup-block {
  height: 400rpx;
}

.edit-btn {
  background-color: var(--yellow--);
}

.swipe-btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
  color: white;
}

.column {
  flex-direction: column;
}