.statistics {
  overflow: scroll;
  height: 100%;
}


.top-statistics {
  width: 100%;
  padding: 20rpx 10rpx 20rpx 40rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  color: #fff;

}

.top-statistics .left {
  display: flex;
  flex-direction: column;
  font-size: 50rpx;
  gap: 10rpx;
}

.top-statistics .right {
  color: #fff !important;
}

.top-statistics .right button:active {
  background-color: var(--text-color-6--);
}

.top-statistics .left .label {
  font-size: 28rpx;
  opacity: 0.7;
}

.container {
  padding: 20rpx;
  margin-bottom: 180rpx;

}

.container .item {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.container .item .title {
  font-size: 38rpx;
  color: var(--text-color-2--);

}

.container .content {
  width: 100%;
  height: 400rpx;
}

.goods-rank {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 20rpx;
}

.goods-rank:active {
  background-color: var(--text-color-6--);
  border-radius: 20rpx;
}

.t-progress {
  width: 500rpx;
}

.goods-rank .name {
  width: 100rpx;
  color: var(--text-color-2--);
  font-size: 32rpx;
}