Page {
  background-color: #f7f6f0;
  color: #000;
  overflow: hidden;
  --td-bg-color-block: #817171;
  --td-button-medium-icon-font-size: 44rpx;
}

.container {
  margin: 100rpx 60rpx 50rpx 60rpx;
  position: relative;
  overflow: hidden;
  height: 1100rpx;
  border-radius: 30rpx;
  background-color: #e6dccb;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;

}

.content {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: auto;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.content .poetry {
  font-size: 30rpx;
  line-height: 200%;
  width: 75%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
  padding: 24rpx 0;
}

.image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  z-index: 2;
  box-sizing: border-box;
}

.operate {
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 80rpx;
}

.operate .icon {
  margin: 0;
  width: 100rpx;
  color: #fff !important;
  background: #2b3e80 !important;
}