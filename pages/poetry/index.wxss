Page {
  padding: 24rpx;
  --td-radio-bg-color: #1c2337;
}

.poetry {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  min-width: 150rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
  border: 3rpx solid #8b8b8b63;
}

.card--active {
  border-color: #0052d9;
}

.card--active::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  border: 14px solid #0052d9;
  border-bottom-color: transparent;
  border-right-color: transparent;
}

.card__icon {
  color: #fff;
  position: absolute;
  left: 1.5px;
  top: 1.5px;
  z-index: 1;
}

/* 横向布局 */
.horizontal-box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  gap: 22rpx;
  margin: 0;
  padding: 0;
  width: 100%;
}

.title {
  font-size: 30rpx;
  margin-left: 10rpx;
  line-height: 200%;
  color: #fff;
}

.submit {
  width: 100%;
  margin-top: 40rpx;
}

.external-class {
  width: 100%;
  height: 300rpx !important;
}