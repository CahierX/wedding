Page {}

.chat-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  transform: translate3d(0, 0, 0);
}

.chat-box {
  flex: 1;
  overflow-y: auto;
  box-sizing: border-box;
  padding: 10px;
}

.chat-item {
  display: flex;
  margin-bottom: 10px;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}


.right {
  justify-content: flex-start;
  flex-direction: row-reverse;
}

.left .avatar {
  margin-right: 10px;
}

.right .avatar {
  margin-left: 10px;
}

.content-box {
  max-width: 70%;
  padding: 10px;
  border-radius: 15px;
  background-color: var(--text-color-1--);
  color: #fff;
  font-size: 17px;
}

.content-box.me {
  background-color: var(--primary--);
}

.content {
  font-size: 16px;
  overflow: hidden;
  white-space: pre-wrap;
  word-break: break-word;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content .t-image {
  min-width: 200rpx;
  min-height: 300rpx;
}

.input-box {
  display: flex;
  align-items: center;
  background: rgba(51, 58, 82, 0.6);
  border: 1px solid #4A556F;
  backdrop-filter: blur(15px);
  border-radius: 14px 14px 0px 0px;
  padding: 10px 10px 40px 10px;
}

.input {
  flex: 1;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  box-sizing: content-box;
}

.send-btn {
  margin-left: 10px;
  height: 40px;
  border-radius: 10px;
  border: none;
  font-size: 16px;
}

.send-icon {
  position: absolute;
  right: 42rpx;
  width: 34rpx;
  height: 34rpx;
  z-index: 2;
}

/* 输入框和发送按钮固定底部 */
.input-box {
  margin-top: auto;
}


.loading {
  width: 282rpx;
  height: 73rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  margin: auto;
  margin-bottom: 34rpx;
  background: #333A52;
  border: 1px solid #4A556F;
  border-radius: 12px;
}