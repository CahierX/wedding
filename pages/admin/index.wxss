/* pages/friends/friends.wxss */
.container {
  width: 100%;
  height: 100%;
  padding: 20px;
  background-color: #f3f3f3;
  font-family: monospace;

}

.custom {
  margin-bottom: 120px;
}

.disabled {
  pointer-events: none;
  opacity: 0.3;
}

.custom .tip {
  margin-bottom: 20rpx;

}

.custom-item {
  margin-bottom: 10rpx;
}

.weui-input {
  color: #999999;
  border: 1px solid #f8f8f8;
}

.friend-item {
  padding: 10px;
  border: 1px solid #ddd;
  margin-bottom: 5px;
  border-radius: 5px;
}

.friend-item.selected {
  background-color: #007AFF;
  color: white;
}

.t-radio,
.location-select {
  background: transparent !important;
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.bottom-admin {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  padding: 50rpx;
  background-color: #fff;
}

.bottom-admin-btn {
  background-color: #007AFF;
  color: #fff;
  width: 100%;
  margin-top: 10px;
}