Page {
  --td-cell-title-font-size: 36rpx;
}

.top {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-radius: 20rpx;
  padding: 20rpx;
}

.top .search {
  width: 620rpx;
}

.top .title {
  font-size: 40rpx;
}

.goods {
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx;
}

.goods-indexes {
  height: auto !important;
  margin-bottom: 150rpx;
}

.stepper-slot {
  margin: 10rpx 0;
}

.description {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 30rpx;
  margin-top: 14rpx;
}

.description .active {
  background-color: var(--primary--);
  color: #fff;
}

.description text {
  background-color: var(--text-color-5--);
  border-radius: 10rpx;
  padding: 10rpx;
}



.submit-operate {
  width: 100%;
  position: fixed;
  box-sizing: border-box;
  bottom: 20rpx;
  padding: 20rpx;
  z-index: 2;
}

.delete-btn {
  background-color: var(--red--);
  color: #fff;
}

.btn-wrapper {
  display: flex;
  height: 100%;
}


.edit-btn {
  background-color: var(--yellow--);
}

.swipe-btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
  color: white;
}

.column {
  flex-direction: column;
}


.card {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;

  border: 3rpx solid var(--text-color-5--);
}

.card--active {
  border-color: var(--primary--);
}

.content-custom {
  display: none
}

.card--active .content-custom {
  display: block
}

.card--active::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  border: 14px solid var(--primary--);
  border-bottom-color: transparent;
  border-right-color: transparent;
}

.card__icon {
  color: #fff;
  position: absolute;
  left: 1.5px;
  top: 1.5px;
  z-index: 1;
}

/* 横向布局 */
.horizontal-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 20rpx;
  box-sizing: border-box;
}

.horizontal-box .card {
  width: 250rpx;
}

.horizontal-box .custom {
  width: 520rpx;
}