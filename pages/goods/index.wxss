Page {
  padding: 20rpx;
  height: 100%;
  overflow-y: scroll;
}

.top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 10rpx 20rpx 30rpx 0;
}

.top .search {
  width: 620rpx;
}

.top .title {
  font-size: 40rpx;
}

.goods {
  box-sizing: border-box;
  width: 100%;
}

.stepper-slot {
  margin: 10rpx 0;
  z-index: 2;
}

.description {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
}

.description .active {
  background-color: var(--primary--);
  color: #fff;
}

.description text {
  z-index: 2;
  background-color: var(--text-color-5--);
  border-radius: 10rpx;
  padding: 2rpx 10rpx;
  opacity: 0.7;
  margin-left: -10rpx;
}



.dropmenu-menu {
  height: 60rpx !important;
}

.dropmenu-menu::after {
  border-bottom: none !important;
}

.dropmenu-item {
  color: var(--text-color-2--) !important;
  padding: 0 !important;
}

.dropmenu-label {
  font-size: 26rpx !important;
}

.dropmenu-icon {
  font-size: 32rpx !important;
}


.submit-operate {
  width: calc(100% - 40rpx);
  position: fixed;
  box-sizing: border-box;
  bottom: 20rpx;
  padding: 20rpx;
  z-index: 2;
}


.block {
  width: 100vw;
  height: 660rpx;
  background: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.wrapper {
  margin: 32rpx;
  display: block;
}

.header {
  display: flex;
  align-items: center;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
}

.btn {
  font-size: 32rpx;
  padding: 32rpx;
}

.btn--cancel {
  color: var(--text-color-3--)
}

.btn--confirm {
  color: #0052d9;
}

.delete-btn {
  background-color: var(--red--);
  color: #fff;
}

.btn-wrapper {
  display: flex;
  height: 100%;
}


.edit-btn {
  background-color: var(--yellow--);
}

.swipe-btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
  color: white;
}

.column {
  flex-direction: column;
}