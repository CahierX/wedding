/* pages/invite2/invite2.wxss */

.container-6 {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #000;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  padding: 100rpx 0rpx !important;
}

.bg-6 {
  position: absolute;
  left: -15%;
  top: 0;
  opacity: 0.65;
  width: 120%;
  height: 100%;

}

.bottom-6 {
  position: absolute;
  left: 80rpx;
  bottom: 160rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 32rpx;
  justify-content: center;
  line-height: 200%;
  color: #fff;
}


.calendar-container {
  position: relative;
  width: 100%;
  overflow: hidden;
  padding: 0 60rpx;
  color: white;
  text-align: center;
  margin-top: 170rpx;

}

.background {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  filter: brightness(0.5);
}

.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 50rpx;
  margin-top: 25rpx;
}

.calendar-header-left {
  display: flex;
  align-items: center;
}

.selected-month {
  font-size: 100rpx;
}

.weekdays,
.calendar-grid {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  margin-bottom: 5px;
  flex-wrap: wrap;
}



.day,
.empty-day,
.weekday {
  position: relative;
  width: 13.5%;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5px;
  text-align: center;
}

.day-text {
  font-size: 18px;
}

.date-love {
  position: absolute;
  width: 100%;
  z-index: -1;
}