.detail-container {
  width: 100vw;
  min-height: 100vh;
  transition: background 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue',
    'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 40rpx 40rpx 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  /* 继承父容器的背景，确保滚动时无白色 */
  background: inherit;
  /* 禁用橡皮筋效果 */
  -webkit-overflow-scrolling: touch;
}

/* Loading Modal 悬浮层 */
.loading-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(20rpx);
  animation: fade-in 0.3s ease-out;
}

.loading-container {
  position: relative;
  z-index: 1;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(60rpx);
  border-radius: 32rpx;
  padding: 80rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20rpx 80rpx rgba(0, 0, 0, 0.15);
  animation: scale-in 0.3s ease-out;
}

.loading-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  margin-top: 32rpx;
}

/* 预测结果已移至上方 */

/* 主要信息卡片 */
.main-card {
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(60rpx);
  border-radius: 40rpx;
  padding: 60rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation-delay: 0.2s;
  animation-fill-mode: both;
  animation: gentle-float 4s ease-in-out infinite alternate;
}

.city-info {
  text-align: center;
  margin-bottom: 24rpx;
}

.city-name {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
}

.predict-time {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

.event-info {
  text-align: center;
  padding: 32rpx;
}

.event-name {
  font-size: 40rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.event-time {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 详细卡片 */
.detail-cards {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.info-card,
.advice-card {
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(60rpx);
  border-radius: 32rpx;
  padding: 48rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation-delay: 0.3s;
  animation-fill-mode: both;
  margin-bottom: 40rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.card-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

.card-content {
  color: rgba(255, 255, 255, 0.9);
}

/* 数据项 */
.data-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.data-item:last-child {
  border-bottom: none;
}

.data-label {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 300;
}

.data-value {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 预测图像 */
.predict-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.image-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.5;
  text-align: center;
}

/* 建议文本 */
.advice-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
  background: rgba(255, 255, 255, 0.05);
  padding: 32rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid rgba(255, 255, 255, 0.3);
}

/* 错误状态 */
.error-section {
  margin-top: 200rpx;
}

.error-card {
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(60rpx);
  border-radius: 32rpx;
  padding: 80rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20rpx 80rpx rgba(0, 0, 0, 0.15);
  animation: gentle-float 3s ease-in-out infinite alternate;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 32rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.error-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 48rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  font-weight: 300;
}

.retry-btn {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 32rpx 64rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 12rpx 48rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 底部操作 */
.bottom-actions {
  display: flex;
  gap: 24rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(60rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  animation-delay: 0.4s;
  animation-fill-mode: both;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  border-radius: 32rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  gap: 12rpx;
}

.share-btn {
  background: linear-gradient(135deg, #4caf50, #45a049);
  color: white;
  box-shadow: 0 12rpx 48rpx rgba(76, 175, 80, 0.4);
}

.predict-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 12rpx 48rpx rgba(102, 126, 234, 0.4);
}

.btn-icon {
  font-size: 32rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.btn-text {
  font-size: 30rpx;
  font-weight: 600;
}

/* 模式切换器样式 */
.model-switcher {
  animation-delay: 0.2s;
}

.switcher-buttons {
  display: flex;
  gap: 24rpx;
}

.model-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  margin-right: 24rpx;
}
.model-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.model-desc {
  font-size: 22rpx;
  opacity: 0.8;
  line-height: 1.4;
}

/* 深色主题下的模式切换器 */
.text-dark .model-btn {
  background: rgba(0, 0, 0, 0.05);
  border-color: rgba(0, 0, 0, 0.1);
}

.text-dark .model-name {
  color: #333;
}

.text-dark .model-desc {
  color: #666;
}

/* 深色主题下的加载状态 */
.text-dark .loading-container {
  background: rgba(255, 255, 255, 0.9);
  border-color: rgba(0, 0, 0, 0.1);
}

.text-dark .loading-text {
  color: #444;
  text-shadow: 0 1rpx 4rpx rgba(255, 255, 255, 0.3);
}

/* 模式切换Loading遮罩 */
.switch-loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.switch-loading-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10rpx);
  animation: fade-in 0.2s ease-out;
}

.switch-loading-container {
  position: relative;
  z-index: 1;
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(40rpx);
  border-radius: 24rpx;
  padding: 60rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.1);
  animation: scale-in 0.2s ease-out;
}

.switch-loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
  margin-top: 24rpx;
}

/* 深色主题下的模式切换loading */
.text-dark .switch-loading-container {
  background: rgba(255, 255, 255, 0.85);
  border-color: rgba(0, 0, 0, 0.08);
}

.text-dark .switch-loading-text {
  color: #555;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.2);
}

/* 动画定义 */
@keyframes gentle-float {
  0% {
    transform: translateY(0rpx);
  }

  50% {
    transform: translateY(-8rpx);
  }

  100% {
    transform: translateY(0rpx);
  }
}

/* 动画类 */
.fade-in {
  animation: fade-in 0.8s ease-out;
}

.slide-up {
  animation: slide-up 0.8s ease-out;
}

@keyframes fade-in {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes scale-in {
  from {
    opacity: 0;
    transform: scale(0.8);
  }

  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes slide-up {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 文字颜色主题 */
.text-white {
  color: white;
}

.text-dark {
  color: #333;
}

.text-dark .nav-title,
.text-dark .city-name,
.text-dark .event-name,
.text-dark .card-title,
.text-dark .data-value {
  color: #333;
  text-shadow: 0 1rpx 4rpx rgba(255, 255, 255, 0.3);
}

.text-dark .data-label,
.text-dark .predict-time,
.text-dark .event-time {
  color: #666;
}

.text-dark .card-content,
.text-dark .advice-text,
.text-dark .loading-text,
.text-dark .error-text {
  color: #444;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .content {
    padding: 0 30rpx 30rpx;
  }

  .main-card,
  .info-card,
  .advice-card {
    padding: 36rpx;
  }

  .city-name {
    font-size: 42rpx;
  }

  .event-name {
    font-size: 36rpx;
  }

  .card-title {
    font-size: 32rpx;
  }
}
