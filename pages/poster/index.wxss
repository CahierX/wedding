.container-poster {
  width: 100%;
  height: 100%;
  padding: 100rpx 0rpx;
  background: var(--bg-color);
}

.flower-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
  padding: 0 20rpx;
}

.image {
  height: 500rpx;
}

.top-right {
  width: 400rpx;
  display: flex;
  flex-direction: column;
  padding: 0rpx 30rpx;
}

.top-right-title {
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #fff;
}

.top-right-subtitle {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;

}

.top-image {
  width: 100%;
  margin-left: -20rpx;
}

.top-right-info {
  font-size: 22rpx;
  margin-top: 10rpx;
  color: #fff;
}

.bottom-btn {
  width: 100%;
  display: flex;
  justify-content: space-between;
  text-align: center;
  font-size: 20rpx;
  margin-top: 30rpx;
}

.btn {
  width: 148rpx;
  height: 50rpx;
  background-color: #fff;
  border-radius: 20rpx;
  color: #000;
  line-height: 250%;
  display: flex;
  align-items: center;
  justify-content: center;
}



.icon {
  width: 26rpx;
  margin-right: 10rpx;
}

.cente-image {
  width: 100%;
}

.bottom {
  width: 100%;
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 18rpx;
  justify-content: space-between;
  padding: 10rpx 20rpx;

}

.bottom-image {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}

.bottom-image .image {
  height: 500rpx;
}

.bottom-text {
  width: 100%;
  display: inline-block;
  font-size: 16rpx;
  color: #fff;
  text-align: center;
  margin-top: 10rpx;
  letter-spacing: 10rpx;
  font-weight: 300;
}