<view class="user-center">
  <view class="top">
    <t-user-center-card userInfo="{{userInfo}}" />
    <view class="statistics">
      <view class="item">
        <text>{{score}}</text>
        <text class="label">我的积分</text>
      </view>
      <view class="item">
        <text>{{invite_count}}</text>
        <text class="label">邀请人数</text>
      </view>
    </view>
  </view>
  <t-cell-group class="content" theme="card">
    <t-cell title="签到" arrow hover bindtap="onCheckIn" />
    <t-cell title="分享小程序" hover arrow data-key="/pages/share/index" capture-bind:tap="navigate" />
    <t-cell title="退出" arrow hover bindtap="logoutFn" />
  </t-cell-group>
</view>
<t-dialog id="t-dialog" />