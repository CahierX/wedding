.content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 20rpx;
}

.cell {
  padding: 20rpx;
}

.cell:active {
  background-color: var(--text-color-6--);
  border-radius: 10rpx;
}

.list :not(:last-child) .cell {
  border-bottom: 0.5rpx solid var(--text-color-5--);
}

.btn-wrapper {
  height: 100%;
}

.btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
  color: white;
}

.delete-btn {
  background-color: var(--red--);
}

.edit-btn {
  background-color: var(--yellow--);
}