page {
  height: 100vh;
  font-family: 'PingFang SC', 'Microsoft YaHei', '微软雅黑', 'MicrosoftJhengHei', '华文细黑' !important;
  font-size: 26rpx;
  background: linear-gradient(180deg, #0B0B15 0%, #151C2E 100%);
  font-weight: 400;
  box-sizing: border-box;
  --td-primary-color: #355BF6;
  --td-bg-color-block: var(--bg1);
  --td-textarea-border-color: #4B4B4D;
  --td-radius-default: 16px;
  --td-textarea-text-color: #fff;
  --td-input-bg-color: #1c2337;
  --td-tab-item-active-color: #fff;
  --td-button-default-text-active-bg-color: transparent;
  --td-tab-track-color: #fff;
  --td-tab-item-color: #6E7480;
  --td-divider-color: #35383c;
  --td-font-gray-3: #5D5D60;
  --td-font-gray-1: #fff;
  --primary--: #355BF6;
  --bg: #191A1B;
  --bg1: #1B2239;
  --red--: #fd6b6d;
  --green--: #a9e87a;
  --yellow--: #ffc31e;
  --text-color-1--: #333A52;
  --text-color-2--: #505462;
  --text-color-3--: #6E7480;
  --text-color-4--: #afb1b8;
  --text-color-5--: #e9eaef;
  --text-color-6--: #f3f4f7;
}

button {
  background: linear-gradient(90deg, #622FF3 0%, #325DF6 100%) !important;
  border: none;
  outline: none !important;
  box-shadow: none;
  border-radius: 99px;
  color: #fff;
  font-size: 14px;
  line-height: 300%;
  transition: 0.3s ease;
}

button:active {
  color: #fff;
  transform: scale(0.95);
}

textarea {
  width: 100%;
  background: #1B2239;
  border: 1rpx solid #4B4B4D;
  border-radius: 16px;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 34rpx;
}

.t-dialog__body-text {
  color: #fff;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.column {
  display: flex;
  flex-direction: column;
}

.t-icon-base:active {
  background-color: var(--text-color-6--) !important;
}

button {
  font-family: 'PingFang SC', 'Microsoft YaHei', '微软雅黑', 'MicrosoftJhengHei', '华文细黑' !important;
}

/* popup 基础样式 */

.popup-block {
  width: 100vw;
  height: 660rpx;
  background: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}



.popup-block .header {
  display: flex;
  align-items: center;
}

.popup-block .title {
  flex: 1;
  text-align: center;
  font-weight: 500;
  font-size: 32rpx;
}

.popup-block .btn {
  font-size: 32rpx;
  padding: 32rpx;
}

.popup-block .btn--cancel {
  color: var(--text-color-3--)
}

.popup-block .btn--confirm {
  color: #0052d9;
}

.blank {
  width: 100%;
  height: 176rpx;
}

.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-color-4--);
  padding: 20rpx 0;
}