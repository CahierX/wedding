page {
  height: 100%;
  font-family: 'PingFang SC', 'Microsoft YaHei', '微软雅黑', 'MicrosoftJhengHei', '华文细黑' !important;
  font-size: 26rpx;
  background-color: #f8f8f8;
  font-weight: 400;
  box-sizing: border-box;
  --td-primary-color: #5560f7;
  --primary--: #5560f7;
  --red--: #fd6b6d;
  --green--: #07cb7c;
  --yellow--: #ffc31e;
  --text-color-1--: #242823;
  --text-color-2--: #505462;
  --text-color-3--: #7f818a;
  --text-color-4--: #afb1b8;
  --text-color-5--: #e9eaef;
  --text-color-6--: #f3f4f7;
}

.t-icon-base:active {
  background-color: var(--text-color-6--) !important;
}

button {
  font-family: 'PingFang SC', 'Microsoft YaHei', '微软雅黑', 'MicrosoftJhengHei', '华文细黑' !important;
}

/* popup 基础样式 */

.popup-block {
  width: 100vw;
  height: 660rpx;
  background: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}



.popup-block .header {
  display: flex;
  align-items: center;
}

.popup-block .title {
  flex: 1;
  text-align: center;
  font-weight: 500;
  font-size: 32rpx;
}

.popup-block .btn {
  font-size: 32rpx;
  padding: 32rpx;
}

.popup-block .btn--cancel {
  color: var(--text-color-3--)
}

.popup-block .btn--confirm {
  color: #0052d9;
}

.blank {
  width: 100%;
  height: 176rpx;
}

.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-color-4--);
}