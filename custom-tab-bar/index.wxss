.tab-bar {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: rgba(51, 58, 82, 0.6);
  padding-bottom: 37px;
  padding-top: 8px;
  z-index: 999999;
  backdrop-filter: blur(15px);
  border-radius: 14px 14px 0px 0px;
  transition: 0.5s;
  border-top: 1px solid #4A556F;
}

.tab-bar.hideen-background {
  background-color: transparent;
  border: none
}

.custom-tab-bar-wrapper {
  width: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 8px;
  color: #fff;
  transition: 0.1s ease;
  opacity: 0.4;
}

.custom-tab-bar-wrapper.selected {
  opacity: 1;
}

.icon {
  width: 32rpx;
  height: 40rpx;
}

.custom-tab-bar-wrapper .text {
  font-size: 26rpx;
  margin-top: 8rpx;
}