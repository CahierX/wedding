.loading {
  position: absolute;
  width: 100vw;
  height: 100vh;
  left: 0px;
  top: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(13px);
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.loading::before {
  content: '';
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 1);
  backdrop-filter: blur(13px);
  mix-blend-mode: exclusion;
  z-index: 1;
  pointer-events: none;
}

.loading::after {
  mix-blend-mode: screen;
  content: '';
  display: block;
  position: absolute;
  top: -100rpx;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url(https://weixin.linktmd.com/public/loading.gif);
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center;
  z-index: 2;
  transform: scale(1.2);
}

.tip {
  position: absolute;
  font-size: 30rpx;
  color: #8b98c5;
  z-index: 3;
  margin-top: -200rpx;
}

.desc {
  margin-top: -100rpx;
  opacity: 0.5;
}