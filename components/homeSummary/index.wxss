.home-summary {
  background: linear-gradient(to right bottom, hsl(227, 81%, 70%), var(--primary--));
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 25rpx 0rpx;
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.4);
}

.home-summary .item {
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
  font-weight: 400;
  height: 100rpx;
}

.home-summary .item .title {
  font-size: 42rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}