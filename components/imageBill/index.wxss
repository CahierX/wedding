.quick-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  gap: 30rpx;
}

.quick-bill {
  width: 70%;
  height: 180rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  transition: 0.3s;
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.4);
  justify-content: center;
}

.quick-bill.bill {
  background: linear-gradient(to top left, #0b91b9, var(--green--));
}

.quick-bill.return-good {
  width: 30%;
  background: linear-gradient(to top left, rgb(235, 160, 160), #d65858);
}

.quick-bill .title {
  color: #fff;
}

.quick-bill .image {
  width: 100rpx;
  height: 100rpx;
}
