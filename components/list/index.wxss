.list {
  box-sizing: border-box;
}

.cell {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.cell:active {
  background-color: var(--text-color-6--);
  border-radius: 10rpx;
}

.list .cell:not(:last-child) {
  border-bottom: 0.5rpx solid var(--text-color-5--);
}

.btn-wrapper {
  height: 100%;
}

.btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
  color: white;
}

.delete-btn {
  background-color: var(--red--);
}

.edit-btn {
  background-color: var(--yellow--);
}

.favor-btn {
  background-color: #0052d9;
}

.column {
  flex-direction: column;
}

.padding-bottom {
  padding-bottom: 8rpx;
}